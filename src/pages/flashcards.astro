---
import Layout from '@/layouts/Layout.astro';
---

<Layout title="Flashcards - 10x Cards">
  <div class="container mx-auto py-8">
    <h1 class="text-3xl font-bold mb-6">Your Flashcards</h1>
    <div class="flex justify-end mb-4">
      <a href="/generate" class="inline-flex items-center px-4 py-2 bg-primary text-primary-foreground hover:bg-primary/90 rounded-md">
        Generate Flashcards
      </a>
    </div>
    
    <!-- Placeholder for flashcards list component -->
    <div class="bg-muted p-8 rounded-lg text-center">
      <p class="text-lg">Flashcards list will be implemented here.</p>
      <p class="text-sm text-muted-foreground mt-2">This is a placeholder for the flashcards list component.</p>
    </div>
  </div>
</Layout>
