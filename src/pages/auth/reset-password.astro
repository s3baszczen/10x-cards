---
import Layout from "../../layouts/Layout.astro";
import ResetPasswordForm from "../../components/auth/ResetPasswordForm";
import AuthHeader from "../../components/auth/AuthHeader";
---

<Layout title="Reset Password - 10x Cards">
  <main class="container max-w-md mx-auto px-4 py-8">
    <AuthHeader title="Reset your password" client:load />
    <div class="mt-4 text-center text-sm text-gray-600 dark:text-gray-300">
      Enter your email address and we'll send you a link to reset your password.
    </div>
    <div class="mt-8">
      <ResetPasswordForm client:load />
    </div>
    <div class="mt-6 text-center text-sm text-gray-600 dark:text-gray-300">
      <a href="/auth/login" class="font-medium text-primary hover:text-primary/90"> Back to login </a>
    </div>
  </main>
</Layout>
