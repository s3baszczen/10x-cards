---
import Layout from '../../layouts/Layout.astro';
import NewPasswordForm from '../../components/auth/NewPasswordForm';
import AuthHeader from '../../components/auth/AuthHeader';
---

<Layout title="Set New Password - 10x Cards">
  <main class="container max-w-md mx-auto px-4 py-8">
    <AuthHeader title="Set new password" client:load />
    <div class="mt-4 text-center text-sm text-gray-600 dark:text-gray-300">
      Please enter your new password below.
    </div>
    <div class="mt-8">
      <NewPasswordForm client:load />
    </div>
  </main>
</Layout>
